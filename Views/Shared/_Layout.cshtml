<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Service Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shoppingcart.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="nav">
            <ul class="Layout-ul">
                <li class="Layout-li"><a class="Layout-a" href="../Login/Login">Login</a></li>
                <li class="Layout-li"><a class="Layout-a" href="../Gallery/Gallery">Gallery	</a></li>
                <li class="Layout-li"><a class="Layout-a" href="../ViewCart/ViewCart">ViewCart	</a></li>
                <li class="Layout-li"><a class="Layout-a" href="../MyPurchase/Purchase">MyPurchase	</a></li>
            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Service Shop - <a asp-area="" >Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
